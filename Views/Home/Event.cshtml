@model Art.Models.IndexViewModel

@{
	ViewData["Title"] = "Sergi ve Etkinlikler ";
	int currentPage = 1;

	var sessionCurrentPage = ViewContext.HttpContext.Session.GetInt32("currentPage");

	if (sessionCurrentPage != null)
	{
		currentPage = int.Parse(sessionCurrentPage.ToString()!);
	}

	int defaultPageCount = Model.Site!.Page; //sayfabaşı listelenecek kayıt adeti vtden alıyor
	int eventCount = Model.Events!.Count(); //event tablosundaki kayıt edeti
	int mod = eventCount % defaultPageCount; // event tablosundaki kayıt adetinin sayfa başı ürün adetine bölümendeki kalan
	int page = eventCount / defaultPageCount; // listelenecek sayfa adeti

	if (mod > 0)
	{
		page++;
	}
}

@{
	await Html.RenderPartialAsync("_Breadcrumbs");
}

<div id="colorlib-container">
	<div class="container">
		<div class="row">
			<div class="col-md-9 content">
				@if (Model.Events != null)
				{
					<div class="row row-pb-md">
						@foreach (var item in Model.Events.Skip((currentPage - 1) * defaultPageCount).Take(defaultPageCount))
						{
							<div class="col-md-6">
								<div class="blog-entry">
									<div class="blog-img">
										<a href="/event/@Methods.GenerateUrl(item.Title!)/@item.Id"><img
												src="~/uploads/images/@item.Image" class="img-responsive"
												alt="html5 bootstrap template"></a>
									</div>
									<div class="desc">
										<p class="meta">
											
											<span class="date">@(String.Format("{0:dd MMM yyyy}", item.Date)) - @(String.Format("{0:dd MMM yyyy}", item.Dateend))</span>
											<span class="pos"><i class="icon-eye text-success"></i> @item.Read </span>
											<span class="pos"><i class="fa-sharp fa-solid fa-heart text-danger"></i> @item.Like
											</span>
										</p>
										<h2><a href="/event/@Methods.GenerateUrl(item.Title!)/@item.Id">@item.Title</a></h2>
										<p>@item.Subtitle</p>
									</div>
								</div>
							</div>
						}
					</div>
				}

				<div class="row">
					<div class="col-md-12 text-center">
						@if (page > 1)
						{
							<ul class="pagination">
								<li class='@(currentPage==1?"disabled":"")'>
									@if (currentPage == 1)
									{
										<a>&laquo;</a>
									}
									else
									{
										<a href="~/event/@(currentPage-1)">&laquo;</a>
									}
								</li>
								@for (int i = 1; i <= page; i++)
								{
									<li class='@(currentPage==i?"active":"")'><a href="~/event/@i">@i</a></li>
								}
								<li class='@(currentPage==page?"disabled":"")'>
									@if (currentPage == page)
									{
										<a>&raquo;</a>
									}
									else
									{
										<a href="~/event/@(currentPage+1)">&raquo;</a>
									}
								</li>
							</ul>
						}
					</div>
				</div>

			</div>
			<div class="col-md-3">
				@{
					await Html.RenderPartialAsync("_EventSideBar");
				}

				
		</div>
	</div>
</div>
</div>